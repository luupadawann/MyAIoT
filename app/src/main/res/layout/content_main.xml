<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lauolhe1.amuii.myaiot.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/rellenodi"
            android:background="@drawable/border">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/rellenodi">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/Titulo_Dispositivo_Remoto" android:id="@+id/textDeviceTitle" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="     " android:id="@+id/textSpace1" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="1122334455"  android:id="@+id/textDeviceValue" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/rellenodi">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/Titulo_Recurso_Remoto" android:id="@+id/textRemoteTitle" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="     " android:id="@+id/textSpace2" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="43434343"  android:id="@+id/textRemoteValue" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/rellenodi">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/Titulo_Dispositivo_Local" android:id="@+id/textLocalDeviceTitle" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="     " android:id="@+id/textSpace3" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="XXXX1111"  android:id="@+id/textLocalDeviceValue" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="175dp"
            android:padding="@dimen/rellenodi"
            android:background="@drawable/border">
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_row="1"
                android:layout_column="0"
                android:id="@+id/Grafica">
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:padding="@dimen/rellenodi"
            android:background="@drawable/border"
            android:layout_height="match_parent"
            android:layout_row="2"
            android:layout_column="0">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/rellenodi"
                android:showDividers="middle">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="LED1"
                    android:id="@+id/buttonled1" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="LED2"
                    android:id="@+id/buttonled2" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="LED3"
                    android:id="@+id/buttonled3" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="LED4"
                    android:id="@+id/buttonled4" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:padding="@dimen/rellenodi"
                android:layout_height="150dp">
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Titulo_Log"
                    android:id="@+id/textView554" />
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/scrollViewEstado" >
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="" android:id="@+id/textViewLog" />
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
